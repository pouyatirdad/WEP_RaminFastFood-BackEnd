@model StorePanel.Core.Models.Invoice


@if (ViewBag.result)
{
    <p style="text-align:center;padding:100px;font-size:50px;color:green;">سفارش شما با موفقیت ثبت شد</p>
    
        string Message = "لیست سفارش:";
    
    @foreach (var item in Model.InvoiceItems)
    {
        Message += item.Product.Title +",";
    }

    Message +="آدرس:" +Model.Address + "            ";
    Message +="شماره تماش:" +Model.Phone + "              ";
    <a target="_blank" rel="nofollow"
       href="https://web.whatsapp.com/send?phone=+989015550137&amp;text=@Message"
     class="btn btn-lg btn-success">ارسال آدرس درواتساپ</a>
}
else
{
    <p style="text-align:center;padding:100px;font-size:50px;color:red;">خطا در فرآیند تراکنش</p>
}