@model StorePanel.Web.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "بروز رسانی رمز عبور";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="mb-20">
    <h3>بروز رسانی رمز عبور</h3>
    <div class="text-muted font-weight-bold">برای بروز رسانی رمز عبور ایمیل خود و رمز عبور جدید را وارد کنید</div>
</div>
<form method="post" id="form" class="form fv-plugins-bootstrap fv-plugins-framework">
    <input type="hidden" asp-for="Code" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="Email" class="form-control h-auto form-control-solid py-4 px-8" placeholder="ایمیل" , autocomplete="off" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="Password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="رمز عبور جدید" , autocomplete="off" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-10 fv-plugins-icon-container">
        <input asp-for="ConfirmPassword" class="form-control h-auto form-control-solid py-4 px-8" placeholder="تکرار رمز عبور جدید" , autocomplete="off" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-wrap flex-center mt-10">
        <input type="submit" value="ارسال" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" />
    </div>
</form>

