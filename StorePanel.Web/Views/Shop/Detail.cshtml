@model StorePanel.Core.Models.Product


@{
    ViewData["Title"] = "جزییات محصول";
}


<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container d-flex align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">محصول</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="product-details-top mb-2">
                <div class="row">
                    <div class="col-md-6">
                        <div class="product-gallery product-gallery-vertical">
                            <div class="row">
                                <figure class="product-main-image">
                                    <img id="product-zoom" src="~/assets/Newimage/kentucy7.jpg"
                                         data-zoom-image="~/assets/Newimage/kentucy7.jpg" alt="تصویر محصول">

                                    <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                        <i class="icon-arrows"></i>
                                    </a>
                                </figure><!-- End .product-main-image -->

                                <div id="product-zoom-gallery" class="product-image-gallery">
                                    <a class="product-gallery-item active" href="#"
                                       data-image="~/assets/Newimage/kentucy6.jpg"
                                       data-zoom-image="~/assets/Newimage/kentucy6.jpg">
                                        <img src="~/assets/Newimage/kentucy6.jpg" alt="توضیحات تصویر">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                       data-image="~/assets/Newimage/burger1.jpg"
                                       data-zoom-image="~/assets/Newimage/burger1.jpg">
                                        <img src="~/assets/Newimage/burger1.jpg" alt="توضیحات تصویر">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                       data-image="~/assets/Newimage/burger3.jpg"
                                       data-zoom-image="~/assets/Newimage/burger3.jpg">
                                        <img src="~/assets/Newimage/burger3.jpg" alt="توضیحات تصویر">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                       data-image="~/assets/Newimage/pitza5.jpg"
                                       data-zoom-image="~/assets/Newimage/pitza5.jpg">
                                        <img src="~/assets/Newimage/pitza5.jpg" alt="product back">
                                    </a>
                                </div><!-- End .product-image-gallery -->
                            </div><!-- End .row -->
                        </div><!-- End .product-gallery -->
                    </div><!-- End .col-md-6 -->

                    <div class="col-md-6">
                        <div class="product-details product-details-centered">
                            <h1 class="product-title text-center">@Model.Title</h1>
                            <!-- End .product-title -->

                            <div class="product-price text-center">
                                76,000 تومان
                            </div><!-- End .product-price -->


                            <div class="product-price text-center">
                                تعداد :
                                @foreach (var item in Model.ProductMainFeatures)
                                {
                                    @item.Quantity
                                }
                            </div><!-- End .product-price -->


                            <div class="product-content">
                                <p class="text-center">
                                    @Model.ShortDescription
                                </p>
                            </div><!-- End .product-content -->


                            <div class="product-details-action">
                                <div class="details-action-col">
                                    <a href="javascript:void(0)" onclick="AddToCart(@Model.Id,@ViewBag.MainFeatureId)" class="btn-product btn-cart">افزودن به سبد خرید</a>
                                </div><!-- End .details-action-col -->

                                <div class="details-action-wrapper">
                                    <a href="javascript:void(0)" onclick="AddToWishList(@Model.Id)" class="btn-product btn-wishlist"
                                       title="لیست علاقه مندی">
                                        <span>
                                            افزودن
                                            به لیست علاقه مندی
                                        </span>
                                    </a>
                                </div><!-- End .details-action-wrapper -->
                            </div><!-- End .product-details-action -->

                            <div class="product-details-footer">
                                <div class="product-cat">
                                    <span>دسته بندی</span>
                                    <a href="#">@Model.ProductGroup.Title</a>
                                </div><!-- End .product-cat -->

                                <div class="social-icons social-icons-sm">
                                    <span class="social-label">اشتراک گذاری : </span>
                                    <a href="#" class="social-icon" title="فیسبوک" target="_blank">
                                        <i class="icon-facebook-f"></i>
                                    </a>
                                    <a href="#" class="social-icon" title="توییتر" target="_blank">
                                        <i class="icon-twitter"></i>
                                    </a>
                                    <a href="#" class="social-icon" title="اینستاگرام" target="_blank">
                                        <i class="icon-instagram"></i>
                                    </a>
                                    <a href="#" class="social-icon" title="پینترست" target="_blank">
                                        <i class="icon-pinterest"></i>
                                    </a>
                                </div>
                            </div><!-- End .product-details-footer -->
                        </div><!-- End .product-details -->
                    </div><!-- End .col-md-6 -->
                </div><!-- End .row -->
            </div><!-- End .product-details-top -->

            <div class="product-details-tab">
                <ul class="nav nav-pills justify-content-center" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="product-desc-link" data-toggle="tab"
                           href="#product-desc-tab" role="tab" aria-controls="product-desc-tab"
                           aria-selected="true">توضیحات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="product-shipping-link" data-toggle="tab"
                           href="#product-shipping-tab" role="tab" aria-controls="product-shipping-tab"
                           aria-selected="false">جزییات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="product-review-link" data-toggle="tab"
                           href="#product-review-tab" role="tab" aria-controls="product-review-tab"
                           aria-selected="false">
                            نظرات (@if (Model.ProductComments != null)
                            {
                                @Model.ProductComments.Count()
                            } else {
                            <span>0</span>
                            })
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="product-desc-tab" role="tabpanel"
                         aria-labelledby="product-desc-link">
                        <div class="product-desc-content">
                            <h3>اطلاعات محصول</h3>
                            <p>
                                @Model.Description
                            </p>
                        </div><!-- End .product-desc-content -->
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="product-shipping-tab" role="tabpanel"
                         aria-labelledby="product-shipping-link">
                        <div class="product-desc-content">
                            <h3>جزییات</h3>
                            @foreach (var item in Model.ProductMainFeatures)
                            {
                                @item.OtherInfo
                            }
                        </div><!-- End .product-desc-content -->
                    </div><!-- .End .tab-pane -->
                    <div class="tab-pane fade" id="product-review-tab" role="tabpanel"
                         aria-labelledby="product-review-link">
                        <div class="reviews">
                            <h3>
                                نظر (@if (Model.ProductComments != null)
                                {
                                    @Model.ProductComments.Count()
                                }
                                else
                                { <span>0</span>})
                            </h3>

                            @if (Model.ProductComments != null)
                            {
                                @foreach (var item in Model.ProductComments)
                                {
                                    <div class="review">
                                        <div class="row no-gutters">
                                            <div class="col-auto">
                                                <h4>
                                                    <a href="#">
                                                        @item.Name
                                                    </a>
                                                </h4>
                                                <span class="review-date">@item.AddedDate</span>
                                            </div><!-- End .col -->
                                            <div class="col-9">
                                                <div class="review-content">
                                                    <p>
                                                        @item.Message
                                                    </p>
                                                </div><!-- End .review-content -->

                                            </div><!-- End .col-auto -->
                                        </div><!-- End .row -->
                                    </div><!-- End .review -->
                                }

                            }

                            <form id="contactForm" class="contact-form mb-5">
                                <input hidden id="ProductId" value="@Model.Id" />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label for="cname" class="sr-only">نام</label>
                                        <input type="text" class="form-control" id="namepr" placeholder="نام خود را وارد کنید *" required="">
                                    </div><!-- End .col-sm-6 -->

                                    <div class="col-sm-6">
                                        <label for="cemail" class="sr-only">ایمیل</label>
                                        <input type="email" class="form-control" id="emailpr" placeholder="ایمیل خود را وارد کنید *" required="">
                                    </div><!-- End .col-sm-6 -->
                                </div><!-- End .row -->

                                <label for="cmessage" class="sr-only">پیام</label>
                                <textarea class="form-control" cols="30" rows="4" id="messagepr" required="" placeholder="متن پیام شما *"></textarea>

                                <button type="submit" id="submitButtonpr" onclick="submitFormpr()" class="btn btn-outline-primary-2 btn-minwidth-sm float-right">
                                    ارسال
                                    <i class="icon-long-arrow-left"></i>
                                </button>
                            </form>
                        </div><!-- End .نظر -->
                    </div><!-- .End .tab-pane -->
                </div><!-- End .tab-content -->
            </div><!-- End .product-details-tab -->

            <h2 class="title text-center mb-4">محصولاتی که شاید بپسندید</h2><!-- End .title text-center -->

            @await Component.InvokeAsync("RealetedProduct", new { id = Model.Id })

        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->

@section scripts{

    <script>
        function submitFormpr() {
            // Initiate Variables With Form Content
            var email = $("#emailpr").val();
            var name = $("#namepr").val();
            var message = $("#messagepr").val();
            var ProductId = $("#ProductId").val();
            var Rate = 0;
            $.ajax({
                type: "POST",
                url: "/Shop/SendComment",
                data: "Email=" + email + "&Name=" + name + "&Message=" + message + "&ProductId=" + ProductId + "&Rate=" + Rate,
                success: function (text) {
                    if (text == "success") {
                        $("#submitButtonpr").css("background-color", "green");
                        $("#submitButtonpr").text("ثبت شد");
                        $("#emailpr").val("");
                        $("#namepr").val("");
                        $("#messagepr").val("");
                        //$("#Rate").val("");
                        location.reload();
                    } else {
                        $("#submitButtonpr").css("background-color", "red");
                        $("#submitButtonpr").text("خطا");
                    }
                }
            });
        }
    </script>

}