@model IEnumerable<StorePanel.Web.ViewModels.ProductWithPriceViewModel>


@if (Model.Any())
{

<div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
     data-owl-options='{
                            "nav": false,
                            "dots": true,
                            "margin": 20,
                            "loop": false,
                            "rtl": true,
                            "responsive": {
                                "0": {
                                    "items":1
                                },
                                "480": {
                                    "items":2
                                },
                                "768": {
                                    "items":3
                                },
                                "992": {
                                    "items":4
                                },
                                "1200": {
                                    "items":4,
                                    "nav": true,
                                    "dots": false
                                }
                            }
                        }'>
    @foreach (var item in Model)
    {
        <div class="product product-7 text-center">
            <figure class="product-media">
                <a href="product-centered.html">
                    <img src="/UploadedFiles/Images/@item.Image" alt="@item.ShortTitle" class="product-image">
                </a>

                <div class="product-action-vertical">
                    <a href="javascript:void(0)" onclick=" AddToWishList(@item.Id) " class="btn-product-icon btn-wishlist btn-expandable">
                        <span>
                            افزودن به
                            لیست علاقه مندی
                        </span>
                    </a>

                </div><!-- End .product-action-vertical -->

                <div class="product-action">
                    <a href="javascript:void(0)" onclick=" AddToCart(@item.Id,@item.MainFeatureId) "  class="btn-product btn-cart"><span>افزودن به سبد خرید</span></a>
                </div><!-- End .product-action -->
            </figure><!-- End .product-media -->

            <div class="product-body">
                <div class="product-cat text-center">
                    <a href="#">@item.ProductGroup</a>
                </div><!-- End .product-cat -->
                <h3 class="product-title text-center">
                    <a href="product-centered.html">
                        @item.ShortTitle
                    </a>
                </h3>
                <!-- End .product-title -->
                <div class="product-price">
                    @item.Price
                </div><!-- End .product-price -->
            </div><!-- End .product-body -->
        </div><!-- End .product -->

    }
</div><!-- End .owl-carousel -->

}

