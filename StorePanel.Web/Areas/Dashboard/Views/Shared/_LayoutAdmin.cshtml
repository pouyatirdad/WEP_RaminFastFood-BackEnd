    <!-- begin::favicon -->
    <link rel="shortcut icon" href="@await Component.InvokeAsync("logoImage")">
    <!-- end::favicon -->
    <!-- begin::theme color -->
    <meta name="theme-color" content="#1b1b1b" />
    <!-- end::theme color -->
    @RenderSection("Header", required: false)
