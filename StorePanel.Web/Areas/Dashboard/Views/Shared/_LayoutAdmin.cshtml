<!DOCTYPE html>
<html lang="en" direction="rtl" dir="rtl" style="direction: rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@await Component.InvokeAsync("logoImage")">
    <title>@ViewBag.Title</title>
    <!-- begin::global styles -->
    <link rel="stylesheet" href="/admin/vendors/bundle.css" type="text/css">
    <link href="~/admin/vendors/dataTable/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin/vendors/tagify/tagify.css" rel="stylesheet" />
    <link href="~/admin/vendors/dropzone/dropzone.css" rel="stylesheet" />
    <link href="~/admin/vendors/cropper/cropper.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/admin/vendors/select2/css/select2.min.css" type="text/css">
    <!-- end::select2 -->
    <!-- begin::range slider -->
    <link rel="stylesheet" href="~/admin/vendors/range-slider/css/ion.rangeSlider.min.css" type="text/css">
    <!-- end::range slider -->
    <!-- begin::tagsinput -->
    <link rel="stylesheet" href="~/admin/vendors/tagsinput/bootstrap-tagsinput.css" type="text/css">
    <!-- end::global styles -->

