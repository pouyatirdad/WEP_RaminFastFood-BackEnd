    <link rel="stylesheet" href="~/admin/vendors/clockpicker/bootstrap-clockpicker.min.css" type="text/css">

    <!-- begin::custom styles -->
    <link rel="stylesheet" href="~/admin/css/app.css" type="text/css">
    <link rel="stylesheet" href="~/admin/css/custom.css" type="text/css">
    <!-- end::custom styles -->
