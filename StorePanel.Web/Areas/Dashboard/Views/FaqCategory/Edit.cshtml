@model StorePanel.Core.Models.FaqCategory

<input type="hidden" id="title" value="ویرایش دسته بندی" />

<form asp-action="Edit" method="post" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />
    <input asp-for="InsertDate" type="hidden" />
    <input asp-for="InsertUser" type="hidden" />
    <input asp-for="IsDeleted" type="hidden" />

    <div class="form-group">
        <label asp-for="Title" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div style="float:left">
            <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
        </div>
    </div>
</form>
<script>
    $.validator.unobtrusive.parse("#form");
</script>