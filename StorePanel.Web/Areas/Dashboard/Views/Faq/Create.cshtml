@model StorePanel.Core.Models.Faq

<input type="hidden" id="title" value="ایجاد سوال متداول" />
<form asp-action="Create" method="post" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FaqCategoryId" class="control-label">دسته بندی</label>
        <div class="col-md-10">
            <select asp-for="FaqCategoryId" asp-items="@ViewData["FaqCategories"] as List<SelectListItem>" class="form-control"></select>
            <span asp-validation-for="FaqCategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Question" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <textarea class="form-control" asp-for="Question"></textarea>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Answer" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <textarea class="form-control" asp-for="Answer"></textarea>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div style="float:left">
            <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
        </div>
    </div>
</form>
<script>
    $.validator.unobtrusive.parse("#form");
</script>